<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">




    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:minHeight="74dp">



        <ImageView
            android:id="@+id/profile_view"
            android:layout_width="74dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:src="@drawable/bg_btn_facebook"
            android:adjustViewBounds="true"
            android:padding="8dp"
            android:layout_marginLeft="8dp"/>

        <RelativeLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_toRightOf="@id/profile_view"
            android:orientation="vertical"
            xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="bottom"
                android:textAppearance="?android:textAppearanceMedium"
                android:textSize="16dp"
                android:textColor="@android:color/black"

                android:fontFamily="sans-serif"
                android:text="Appliance Name" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_below="@id/group_name">

                <ImageView
                    android:id="@+id/group_image"
                    android:layout_width="14dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_group_black_24dp"
                    android:paddingTop="3dp"

                    />

                <TextView
                    android:id="@+id/members"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="top"
                    android:paddingStart="3dp"
                    android:layout_toEndOf="@id/group_image"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/group_gray"
                    android:text="15"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="top"
                    android:paddingStart="3dp"
                    android:layout_toRightOf="@id/members"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/group_gray"
                    android:text="Members"
                    android:textSize="14dp"/>


            </RelativeLayout>


            <TextView
                android:id="@+id/join"
                android:layout_width="72dp"
                android:layout_height="31dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:background="@drawable/join_background"
                android:gravity="center"
                android:text="JOIN"
                android:textColor="@color/room_join"
                android:visibility="visible"

                />

            <ProgressBar
                android:id="@+id/indeterminateBar"
                android:visibility="gone"
                android:layout_width="78dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"

                />

            <ImageView
                android:id="@+id/check"
                android:visibility="gone"
                android:src="@drawable/ic_check"
                android:padding="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:layout_width="72dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:background="@drawable/join_check_background"
                />



        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>




